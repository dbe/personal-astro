---
import '../styles/global.scss';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Brian Ethier', description = 'Brian Ethier' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
