---
import '../styles/p5.scss';

interface Props {
  title?: string;
  scriptPath: string;
}

const { title = 'P5.js Demo', scriptPath } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.9.0/p5.min.js"></script>
  </head>
  <body>
    <slot />
    <script is:inline src={scriptPath}></script>
  </body>
</html>
